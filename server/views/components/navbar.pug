nav.navbar.navbar-expand-lg.bg-body-tertiary.shadow-sm
  div.container-fluid
    a.navbar-brand(href='#') 
        | Members Only 
        img.nav-img(src="/images/message2.png") 
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    div.collapse.navbar-collapse(id='navbarSupportedContent')
      ul.navbar-nav.me-auto.ms-lg-5.d-flex.gap-2 
        li.nav-item
          a.nav-link(aria-current='page', href='/messages') Home
        if !currentUser 
          li.nav-item 
            a.nav-link(href="/auth/login") Login 
          li.nav-item.mb-3.mb-lg-0
            a.nav-link(href="/auth/signUp") Sign Up
        else 
          //- dropdown
          li.nav-item.dropdown.mb-3.mb-lg-0
            a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false') Profile
            ul.dropdown-menu
              li 
                a.dropdown-item(href=currentUser.url) My Profile
              li
                a.dropdown-item(href=currentUser.url + "/update") Update Profile 
              li 
                hr.dropdown-divider
              li.nav-item
                a.dropdown-item(aria-current='page', href='/auth/logout') Logout
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href=currentUser.url + "/delete") Delete Profile 


      //- search bar
      form.d-flex(role='search', method="GET", action="/profile/search")
        input.form-control.me-2(type='search', placeholder='Search User', name="q" aria-label='Search')
        button.btn.btn-outline-success(type='submit') Search

